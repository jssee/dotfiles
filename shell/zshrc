export PATH="/usr/local/bin:$PATH"
export PATH=$PATH:~/.cargo/bin

# brew doc recommended
export PATH="$HOME/.bin:$PATH"

export EDITOR="/usr/local/bin/nvim"

source $HOME/dotfiles/shell/alias.sh
source $HOME/dotfiles/shell/utils.sh
source $HOME/dotfiles/shell/prompt.sh # Pure by Sindre Sorhus

# source plugins
source $HOME/dotfiles/shell/plugins/z.sh
source $HOME/dotfiles/shell/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# hub alias
eval "$(hub alias -s)"

# Pack install directory
export VIM_CONFIG_PATH="$HOME/dotfiles/nvim/"

# asdf
autoload -Uz compinit && compinit

. /usr/local/opt/asdf/asdf.sh
